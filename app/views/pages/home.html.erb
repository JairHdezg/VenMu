<div class="container-fluid home-page d-flex flex-column justify-content-between" id="home-container">
  <div class="row mt-3 hide">
    <div class="col-sm-12">
      <h1 class="title">VenMÌƒu</h1>
      <h2 class="sub-title">Your music. New places.</h2>
    </div>
  </div>
  <div class="container-sm">
    <div class="row mt-5 hide">
      <div class="col-sm-12 d-flex flex-column align-items-center">
        <form action = "/places" method= "GET" class="form-inline" autocomplete="off">
          <input class="search-bar" type="search" placeholder="Search by Genre" aria-label="Search" name="query" value="<%= @query %>">
          <button class="btn btn-primary submit-btn d-flex justify-content-end" type="submit">
            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-search" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
              <path fill-rule="evenodd" d="M10.442 10.442a1 1 0 0 1 1.415 0l3.85 3.85a1 1 0 0 1-1.414 1.415l-3.85-3.85a1 1 0 0 1 0-1.415z"/>
              <path fill-rule="evenodd" d="M6.5 12a5.5 5.5 0 1 0 0-11 5.5 5.5 0 0 0 0 11zM13 6.5a6.5 6.5 0 1 1-13 0 6.5 6.5 0 0 1 13 0z"/>
            </svg>
          </button>
        </form>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12 d-flex flex-column align-items-center">
        <h4 class="under-search mt-3">Pick a Genre!</h4>
        <svg type="submit" data-toggle="modal" data-target="#myModal23" width="30px" height="30px" style="color:white" viewBox="0 0 16 16" class="bi bi-chevron-up" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
          <path fill-rule="evenodd" d="M7.646 4.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1-.708.708L8 5.707l-5.646 5.647a.5.5 0 0 1-.708-.708l6-6z"/>
        </svg>
      </div>
    </div>
  </div>
  <div class="modal fade animate background-light p-0" id="myModal23" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-fluid" role="document">
      <div class="modal-content animate-bottom" id="modal-content-background-home-page">
        <div class="modal-body container-fluid d-flex justify-content-center mx-0 my-1">
          <div class="container-flexbox">
                <div data-genre='rock' class="genre-container rounded d-flex align-items-end m-2" style="background-image: linear-gradient(rgba(9,11,9,0.3)80%, rgba(9,11,9,0.6) 35%), url(https://res.cloudinary.com/detnzqadn/image/upload/v1598479957/descarga_3_mgvflq.jpg)">
                  <h4 class="genre-title">ROCK</h4>
                </div>
                <div data-genre='pop' class="genre-container rounded d-flex align-items-end m-2" style="background-image: linear-gradient(rgba(9,11,9,0.3)80%, rgba(9,11,9,0.6) 35%), url(https://res.cloudinary.com/detnzqadn/image/upload/v1598479957/photo-1514525253161-7a46d19cd819_ndlj2b.jpg)">
                  <h4 class="genre-title">POP</h4>
                </div>

                <div data-genre='reggaeton' class="genre-container rounded d-flex align-items-end m-2" style="background-image: linear-gradient(rgba(9,11,9,0.3)80%, rgba(9,11,9,0.6) 35%), url(https://res.cloudinary.com/detnzqadn/image/upload/v1598479956/photo-1532981434728-a2706e29a80e_m44kil.jpg)">
                  <h4 class="genre-title">REGGAETON</h4>
                </div>

                <div data-genre='latin' class="genre-container rounded d-flex align-items-end m-2" style="background-image: linear-gradient(rgba(9,11,9,0.3)80%, rgba(9,11,9,0.6) 35%), url(https://res.cloudinary.com/detnzqadn/image/upload/v1598479959/photo-1504609813442-a8924e83f76e_kcehsz.jpg)">
                  <h4 class="genre-title">LATIN</h4>
                </div>

                <div data-genre='classical' class="genre-container rounded d-flex align-items-end m-2" style="background-image: linear-gradient(rgba(9,11,9,0.3)80%, rgba(9,11,9,0.6) 35%), url(https://res.cloudinary.com/detnzqadn/image/upload/v1598480137/dan-gold-YW9cBl03LmE-unsplash_toyjlx.jpg)">
                  <h4 class="genre-title">CLASSICAL</h4>
                </div>

                <div data-genre='jazz' class="genre-container rounded d-flex align-items-end m-2" style="background-image: linear-gradient(rgba(9,11,9,0.3)80%, rgba(9,11,9,0.6) 35%), url(https://res.cloudinary.com/detnzqadn/image/upload/v1598480096/unnamed_wyze1e.jpg)">
                  <h4 class="genre-title">JAZZ</h4>
                </div>

                <div data-genre='soul' class="genre-container rounded d-flex align-items-end m-2" style="background-image: linear-gradient(rgba(9,11,9,0.3)80%, rgba(9,11,9,0.6) 35%), url(https://res.cloudinary.com/detnzqadn/image/upload/v1598480137/derek-truninger-uLitVttkC7o-unsplash_if201c.jpg)">
                  <h4 class="genre-title">SOUL</h4>
                </div>

                <div data-genre='dance' class="genre-container rounded d-flex align-items-end m-2" style="background-image: linear-gradient(rgba(9,11,9,0.3)80%, rgba(9,11,9,0.6) 35%), url(https://res.cloudinary.com/detnzqadn/image/upload/v1598480137/marcela-laskoski-YrtFlrLo2DQ-unsplash_b74bg3.jpg)">
                  <h4 class="genre-title">DANCE</h4>
                </div>
          </div>
        </div>
        <button type="button" id="close-modal-btn" class="close" data-dismiss="modal" aria-label="Close">
          <svg width="30px" height="30px" viewBox="0 0 16 16" class="bi bi-x-circle-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-4.146-3.146a.5.5 0 0 0-.708-.708L8 7.293 4.854 4.146a.5.5 0 1 0-.708.708L7.293 8l-3.147 3.146a.5.5 0 0 0 .708.708L8 8.707l3.146 3.147a.5.5 0 0 0 .708-.708L8.707 8l3.147-3.146z"/>
          </svg>
        </button>
      </div>
    </div>
  </div>
</div>
