  <%= simple_form_for @place do |f| %>
    <%= f.input :name, required: true, label_html: { hidden: true }, placeholder: "Place name" %>
    <%= f.input :address, required: true, label_html: { hidden: true }, placeholder: "Address" %>
    <%= f.input :category, required: true, label_html: { hidden: true }, placeholder: "What kind of place is this?" %>
    <div class=" ui-widget form-group string required place_top_genre">
      <label hidden="hidden" class="string required" for="place_top_genre">
        Top genre
          <abbr title="required">*</abbr>
      </label>
      <input class="form-control string required" required="required" aria-required="true" placeholder="Select genres played here" type="text" name="place[top_genre]" id="place_top_genre">
    </div>
    <%= f.input :description, required: true, label_html: { hidden: true }, placeholder: "What's the music like?" %>
    <%= f.input :phone_number, label_html: { hidden: true }, placeholder: "Phone number" %>
    <%= f.input :url, label_html: { hidden: true }, placeholder: "www.website.com" %>
    <div class="form-group file optional place_photos mb-5">
      <label id="place-photo-label" class="file optional" for="place_photos">&nbsp;</label><input class="form-control-file file optional" hidden="hidden" type="file" name="place[photos]" id="place_photos">&nbsp;</label>
      <input class="form-control-file file optional" hidden="hidden" type="file" name="place[photos]" id="place_photos">
    </div>
    <%= f.button :submit, "Add to VenMu", class: 'btn btn-primary btn-block rounded shadow mt-5' %>
  <% end %>
